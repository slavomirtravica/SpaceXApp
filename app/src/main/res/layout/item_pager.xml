<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10dp">

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300dp"
            android:src="@drawable/spacex" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_25sp"
                android:layout_width="0dp"
                android:textColor="@color/logo_blue"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/home_port"
                 />

            <ImageView
                android:id="@+id/ivRead"
                tools:src="@drawable/red_flag"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
                />

        </LinearLayout>
        
        <TextView
            android:id="@+id/tvHomePort"
            tools:text="@tools:sample/cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/logo_blue"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/ship_name"
            android:textSize="@dimen/_25sp" />

        <TextView
            android:id="@+id/tvShipName"
            tools:text="@tools:sample/lorem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/logo_blue"
            android:textStyle="bold"
            android:layout_height="@dimen/_40dp"
            android:text="@string/year_built"
            android:textSize="@dimen/_25sp" />

        <TextView
            android:id="@+id/tvYearBuilt"
            tools:text="@tools:sample/us_zipcodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>